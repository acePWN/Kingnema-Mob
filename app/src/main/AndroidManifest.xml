            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Home2"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Account"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Movie"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Confirmation"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".TopUp"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".EULA" />
